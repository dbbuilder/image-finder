# Server configuration
PORT=3000
NODE_ENV=development

# Azure Storage configuration
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_STORAGE_CONTAINER=your_container_name

# Multiple Image Search API configurations

# Primary/Custom API configuration
PRIMARY_SEARCH_API_ENDPOINT=https://api.example.com/search
PRIMARY_SEARCH_API_KEY=your_primary_api_key
PRIMARY_SEARCH_API_KEY_HEADER=Authorization
PRIMARY_SEARCH_API_KEY_PREFIX=Bearer 
PRIMARY_SEARCH_QUERY_PARAM=q
PRIMARY_SEARCH_RESULT_PATH=items.0.link

# Pixabay API (free with registration, 5000 requests/hour)
# Register at https://pixabay.com/api/docs/
PIXABAY_API_KEY=your_pixabay_api_key

# Unsplash API (free with registration)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# Pexels API (free with registration)
PEXELS_API_KEY=your_pexels_api_key

OPENAI_API_KEY=your_openai_api_key


# NOTE: OpenVerse API is always enabled by default (no API key required)

# API Security
API_KEY=your_api_key_for_authentication


TRUSTED_IPS=


# Adobe Firefly (Creative Cloud)
ADOBE_CLIENT_ID=
ADOBE_CLIENT_SECRET=

# OpenAI DALL-E
OPENAI_API_KEY=your_openai_api_key

# Ideogram
IDEOGRAM_API_KEY=

# AI Generation Settings
ENABLE_AI_GENERATION=true
AI_GENERATION_TIMEOUT=15000
